{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true  // rrweb and mock-gs have issues apparently
  },
  "lib": ["es2015"]
}
